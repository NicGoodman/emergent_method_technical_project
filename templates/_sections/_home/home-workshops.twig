<section id="workshops" class="container my-5">
	<h2>{{ entry.workshopsHeading}}</h2>
	<h5>{{ entry.workshopsSubHeading }}</h5>
	<section id="filter-bar" class="bg-dig-orange w-100 py-4 d-flex my-5"></section>
	<section id="workshop-cards" class="d-flex flex-wrap flex-row justify-content-center">
		{% for entry in craft.entries.section('workshops') %}
			<article id="workshop" class="workshop-card m-3 d-flex flex-column justify-content-center align-content-end p-3">
				<h4 class="fw-bold text-center">{{ entry.title }}</h4>
                <section id="workshop-type-icons" class="w-100 d-flex flex-row justify-content-end align-self-end"></section>
				{% for type in entry.workshopTypes %}
					<img src="{{ type.workshopIcon.one().getUrl }}" alt="">
				{% endfor %}
			</article>
		{% endfor %}
	</section>
</section>
